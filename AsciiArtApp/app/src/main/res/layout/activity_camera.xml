<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black">

    <com.mark.asciiartapp.ui.widget.CameraGLSurfaceView
        android:id="@+id/camera_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_80"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        android:layout_marginBottom="@dimen/dp_70"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/camera_last_shot_view"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginBottom="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_20"
            android:layout_marginLeft="@dimen/dp_20"
            android:scaleType="fitXY"
            android:src="@color/grassgreen"/>

        <com.mark.asciiartapp.ui.widget.CameraButton
            android:id="@+id/camera_take"
            android:layout_width="@dimen/dp_80"
            android:layout_height="match_parent"/>

        <ImageView
            android:id="@+id/camera_last_shot_generated_view"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_20"
            android:layout_marginLeft="@dimen/dp_20"
            android:scaleType="fitXY"
            android:src="@color/blue"
            android:layout_marginBottom="@dimen/dp_10"/>
    </LinearLayout>
</RelativeLayout>
